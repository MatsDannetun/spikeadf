								},
								"sink": {
									"name": "ctype",
									"type": "Int32",
									"physicalType": "int"
								}
							},
							{
								"source": {
									"name": "cvalue",
									"type": "Single",
									"physicalType": "real"
								},
								"sink": {
									"name": "cvalue",
									"type": "Single",
									"physicalType": "real"
